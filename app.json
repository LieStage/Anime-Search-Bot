{
    "name": "AnimeSearchBot",
    "description": "When you going to send file on telegram channel this bot will save that in database, So you can search that easily in inline mode",
    "stack": "container",
    "keywords": [
      "telegram",
      "auto-filter",
      "filter",
      "best",
      "indian",
      "pyrogram",
      "media",
      "search",
      "channel",
      "index",
      "inline"
    ],
    "website": "https://github.com/LieStage/Anime-Search-Bot",
    "repository": "https://github.com/LieStage/Anime-Search-Bot",
    "env": {
            "TOKEN": {
            "description": "Your bot token.",
            "required": true
        },
        "ID": {
            "description": "Get this value from https://my.telegram.org",
            "required": true
        },
        "HASH": {
            "description": "Get this value from https://my.telegram.org",
            "required": true
        },
        
        
    },
    "addons": [],
    "buildpacks": [{
        "url": "heroku/python"
    }],
    "formation": {
        "worker": {
            "quantity": 1,
            "size": "eco"
        }
    }
}
